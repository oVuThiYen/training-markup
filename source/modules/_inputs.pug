//-------------------------------------------------------
//- Modules :: Inputs
//-------------------------------------------------------

mixin input({label, id, type, required, error})
  .form-group(
    class= required ? 'form-group--required' : null
    class= error ? 'form-group--error' : null
  )&attributes(attributes)
    label(for=id)= label
    input.form-control(
    type=type
    id=id
    )
    if (error)
      p.form-error= error

mixin checkbox({label, checked, id, disabled, name})
  label.checkbox(for= id).d-flex.align-items-center&attributes(attributes)
    if checked === true
      input.input-checkbox(type='checkbox', name= name, id= id, checked='checked', disabled= disabled)
    else
      input.input-checkbox(type='checkbox', name= name, id= id, disabled= disabled)
    span.checkmark
    span= label
